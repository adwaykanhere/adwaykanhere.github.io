<!doctype html>
<html lang="{{ site.lang | default: 'en' }}">
  <head>
    {% include head.liquid %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;1,400;1,600&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    >

    <!-- Force font loading with inline styles -->
    <style>
      /* Only apply Dario fonts to the main blog content area */
      .dario-main,
      .dario-main p,
      .dario-main li,
      .dario-content,
      .dario-content p,
      .dario-content li,
      .dario-content *:not(h1):not(h2):not(h3):not(h4):not(h5):not(h6):not(code):not(pre) {
        font-family: 'Crimson Text', Georgia, 'Times New Roman', serif !important;
        font-size: 18px !important;
        line-height: 1.7 !important;
      }
      
      .dario-title,
      .dario-subtitle,
      .dario-date,
      .dario-content h1,
      .dario-content h2,
      .dario-content h3,
      .dario-content h4,
      .dario-content h5,
      .dario-content h6 {
        font-family: 'Inter', 'Helvetica Neue', Arial, sans-serif !important;
      }
      
      .dario-title {
        font-size: 3rem !important;
        font-weight: 700 !important;
        line-height: 1.2 !important;
      }
    </style>
    
    {% if page._styles %}
      <style type="text/css">
        {{ page._styles }}
      </style>
    {% endif %}
  </head>
  <body class="{% if site.navbar_fixed %}fixed-top-nav{% endif %} {% unless site.footer_fixed %}sticky-bottom-footer{% endunless %}">
    {% include header.liquid %}
    <main class="dario-main">
      <article class="dario-article">
        <header class="dario-header">
          <h1 class="dario-title">{{ page.title }}</h1>
          {% if page.description %}
            <p class="dario-subtitle">{{ page.description }}</p>
          {% endif %}
          {% if page.date %}
            <time class="dario-date" datetime="{{ page.date | date: '%Y-%m-%d' }}">
              {{ page.date | date: '%B %d, %Y' }}
            </time>
          {% endif %}
        </header>
        <div class="dario-content">
          {{ content }}
        </div>
      </article>
    </main>
    {% include footer.liquid %}
    {% include scripts.liquid %}
  </body>
</html>
